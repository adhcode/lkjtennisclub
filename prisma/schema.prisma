// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Registration {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Parent/Guardian Information
  parentName        String
  parentEmail       String
  parentPhone       String
  
  // Child Information
  childName         String
  childAge          Int
  childGender       String
  experienceLevel   String
  
  // Emergency Contact
  emergencyContact  String
  emergencyPhone    String
  
  // Additional Information
  medicalConditions String?
  specialRequests   String?
  
  // Event Information
  eventName         String   @default("Alimosho Summer Tennis Clinic & Tournament")
  eventDate         String   @default("August 4-23, 2025")
  
  // Status
  status            String   @default("pending") // pending, confirmed, cancelled
  paymentStatus     String   @default("pending") // pending, paid, refunded
  
  @@map("registrations")
}

model Member {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Personal Information
  firstName       String
  lastName        String
  email           String   @unique
  phone           String
  dateOfBirth     DateTime?
  gender          String?
  
  // Membership Information
  membershipId    String   @unique // This will be encoded in QR code
  membershipType  String   @default("regular") // regular, premium, student, family
  membershipStatus String  @default("active") // active, inactive, suspended
  joinDate        DateTime @default(now())
  expiryDate      DateTime?
  
  // Tennis Information
  skillLevel      String?  // beginner, intermediate, advanced, professional
  playingHand     String?  // right, left, both
  
  // Contact Information
  address         String?
  emergencyContact String?
  emergencyPhone  String?
  
  // Profile
  bio             String?
  profileImage    String?
  
  // QR Code
  qrCodeUrl       String?  // URL to generated QR code image
  
  @@map("members")
}